include header
.ui.grid
  .four.wide.column
    - user.gender = 'm'
    - ({'m': '男', 'f': '女', 'x':'保密'})['m']
    a.avatar(href="/posts?author="+user._id data-title=+user.name | user.gender data-content=+user.bio)
  .eight.wide.column
    form.ui.form.segment(method="post" action="/posts")
      .field.required
        label 标题
        input(type="text" name="title")
      .field.required
        label 内容
        textarea(name="content" rows="15")
      input.ui.button(type="submit" value="发布")
include footer
